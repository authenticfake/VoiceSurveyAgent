{
  "version": "1.0",
  "req_id": "REQ-002",
  "lane": "python",
  "env": {
    "DATABASE_URL": "sqlite+aiosqlite:///:memory:",
    "OIDC_ISSUER_URL": "https://test.auth0.com",
    "OIDC_CLIENT_ID": "test-client-id",
    "OIDC_CLIENT_SECRET": "test-client-secret",
    "JWT_SECRET_KEY": "test-secret-key-for-testing-only",
    "DEBUG": "true"
  },
  "cases": [
    {
      "name": "install_deps",
      "run": "pip install -r runs/kit/REQ-002/requirements.txt",
      "cwd": ".",
      "expect": 0,
      "timeout": 120
    },
    {
      "name": "tests",
      "run": "PYTHONPATH=runs/kit/REQ-002/src pytest runs/kit/REQ-002/test -v --cov=app --cov-report=term-missing --cov-report=xml:reports/coverage.xml --junitxml=reports/junit.xml",
      "cwd": ".",
      "expect": 0,
      "timeout": 300
    },
    {
      "name": "lint",
      "run": "ruff check runs/kit/REQ-002/src runs/kit/REQ-002/test",
      "cwd": ".",
      "expect": 0,
      "timeout": 60
    },
    {
      "name": "types",
      "run": "PYTHONPATH=runs/kit/REQ-002/src mypy runs/kit/REQ-002/src --ignore-missing-imports",
      "cwd": ".",
      "expect": 0,
      "timeout": 120
    }
  ],
  "reports": [
    {"kind": "junit", "path": "reports/junit.xml", "format": "junit-xml"},
    {"kind": "coverage", "path": "reports/coverage.xml", "format": "coverage-xml"}
  ],
  "gate_policy": {
    "tests_pass": true,
    "coverage_min": 80,
    "security": {"bandit_high": 0}
  }
}