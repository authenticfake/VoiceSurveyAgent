{
  "version": "1.0",
  "req_id": "REQ-002",
  "lane": "python",
  "env": {
    "DATABASE_URL": "sqlite+aiosqlite:///:memory:",
    "OIDC_ISSUER_URL": "https://test-idp.example.com",
    "OIDC_CLIENT_ID": "test-client",
    "OIDC_CLIENT_SECRET": "test-secret",
    "JWT_SECRET_KEY": "test-secret-key-for-testing-only",
    "APP_ENV": "dev",
    "DEBUG": "true"
  },
  "cases": [
    {
      "name": "install_deps",
      "run": "pip install -r runs/kit/REQ-002/requirements.txt",
      "cwd": ".",
      "expect": 0,
      "timeout": 120
    },
    {
      "name": "lint",
      "run": "ruff check runs/kit/REQ-002/src runs/kit/REQ-002/test --ignore E501",
      "cwd": ".",
      "expect": 0,
      "timeout": 60
    },
    {
      "name": "types",
      "run": "mypy runs/kit/REQ-002/src --ignore-missing-imports --no-error-summary",
      "cwd": ".",
      "expect": 0,
      "timeout": 120
    },
    {
      "name": "tests",
      "run": "PYTHONPATH=runs/kit/REQ-002/src pytest runs/kit/REQ-002/test -v --tb=short --cov=runs/kit/REQ-002/src --cov-report=term-missing --cov-report=xml:runs/kit/REQ-002/reports/coverage.xml --junitxml=runs/kit/REQ-002/reports/junit.xml",
      "cwd": ".",
      "expect": 0,
      "timeout": 300
    },
    {
      "name": "security",
      "run": "pip install bandit && bandit -r runs/kit/REQ-002/src -ll -q || true",
      "cwd": ".",
      "expect": 0,
      "timeout": 60
    }
  ],
  "tools": {
    "tests": "pytest",
    "lint": "ruff",
    "types": "mypy",
    "security": "bandit",
    "build": "docker"
  },
  "commands": {
    "install": "pip install -r runs/kit/REQ-002/requirements.txt",
    "lint": "ruff check runs/kit/REQ-002/src runs/kit/REQ-002/test",
    "types": "mypy runs/kit/REQ-002/src",
    "tests": "pytest runs/kit/REQ-002/test -v",
    "security": "bandit -r runs/kit/REQ-002/src -ll"
  },
  "reports": [
    {
      "kind": "junit",
      "path": "runs/kit/REQ-002/reports/junit.xml",
      "format": "junit-xml"
    },
    {
      "kind": "coverage",
      "path": "runs/kit/REQ-002/reports/coverage.xml",
      "format": "coverage-xml"
    }
  ],
  "gate_policy": {
    "tests_pass": true,
    "coverage_min": 80,
    "security": {
      "bandit_high": 0
    }
  },
  "constraints_applied": {
    "lane": "python",
    "runtime": "python@3.12",
    "framework": "FastAPI",
    "auth": "OIDC"
  }
}