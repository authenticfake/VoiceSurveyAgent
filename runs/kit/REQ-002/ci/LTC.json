{
  "version": "1.0",
  "req_id": "REQ-002",
  "lane": "python",
  "env": {
    "DATABASE_URL": "postgresql://test:test@localhost:5432/voicesurvey_test",
    "OIDC_ISSUER": "https://auth.example.com",
    "OIDC_CLIENT_ID": "test-client",
    "OIDC_CLIENT_SECRET": "test-secret",
    "JWT_SECRET_KEY": "test-secret-key-for-testing-only",
    "JWT_ALGORITHM": "HS256",
    "JWT_EXPIRATION_MINUTES": "60"
  },
  "cases": [
    {
      "name": "install_deps",
      "run": "pip install -r runs/kit/REQ-002/requirements.txt",
      "cwd": ".",
      "expect": 0
    },
    {
      "name": "tests",
      "run": "pytest runs/kit/REQ-002/test -v --tb=short",
      "cwd": ".",
      "expect": 0,
      "timeout": 120
    },
    {
      "name": "coverage",
      "run": "pytest runs/kit/REQ-002/test --cov=runs/kit/REQ-002/src/app --cov-report=xml:runs/kit/REQ-002/reports/coverage.xml --cov-report=term-missing",
      "cwd": ".",
      "expect": 0,
      "timeout": 120
    }
  ],
  "reports": [
    {
      "kind": "coverage",
      "path": "runs/kit/REQ-002/reports/coverage.xml",
      "format": "coverage-xml"
    }
  ],
  "gate_policy": {
    "tests_pass": true,
    "coverage_min": 80,
    "security": {
      "bandit_high": 0
    }
  }
}