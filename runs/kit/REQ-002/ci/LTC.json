{
  "version": "1.0",
  "req_id": "REQ-002",
  "lane": "python",
  "env": {
    "DATABASE_URL": "postgresql+asyncpg://postgres:postgres@localhost:5432/voicesurvey_test",
    "OIDC_ISSUER_URL": "https://idp.example.com",
    "OIDC_CLIENT_ID": "test-client",
    "OIDC_CLIENT_SECRET": "test-secret",
    "OIDC_JWKS_URI": "https://idp.example.com/.well-known/jwks.json",
    "OIDC_AUTHORIZATION_ENDPOINT": "https://idp.example.com/authorize",
    "OIDC_TOKEN_ENDPOINT": "https://idp.example.com/token",
    "OIDC_USERINFO_ENDPOINT": "https://idp.example.com/userinfo"
  },
  "cases": [
    {
      "name": "install_deps",
      "run": "pip install -r runs/kit/REQ-002/requirements.txt",
      "cwd": ".",
      "expect": 0,
      "timeout": 120
    },
    {
      "name": "lint",
      "run": "python -m ruff check runs/kit/REQ-002/src runs/kit/REQ-002/test --ignore E501",
      "cwd": ".",
      "expect": 0,
      "timeout": 60
    },
    {
      "name": "types",
      "run": "python -m mypy runs/kit/REQ-002/src --ignore-missing-imports --no-error-summary || true",
      "cwd": ".",
      "expect": 0,
      "timeout": 120
    },
    {
      "name": "tests",
      "run": "PYTHONPATH=runs/kit/REQ-002/src:runs/kit/REQ-001/src python -m pytest runs/kit/REQ-002/test -v --tb=short -p no:cacheprovider",
      "cwd": ".",
      "expect": 0,
      "timeout": 300
    }
  ],
  "tools": {
    "tests": "pytest",
    "lint": "ruff",
    "types": "mypy",
    "security": "bandit",
    "build": "pip"
  },
  "commands": {
    "install": "pip install -r runs/kit/REQ-002/requirements.txt",
    "lint": "ruff check runs/kit/REQ-002/src runs/kit/REQ-002/test",
    "types": "mypy runs/kit/REQ-002/src",
    "tests": "pytest runs/kit/REQ-002/test -v"
  },
  "reports": [
    {
      "kind": "junit",
      "path": "reports/junit-req002.xml",
      "format": "junit-xml"
    },
    {
      "kind": "coverage",
      "path": "reports/coverage-req002.xml",
      "format": "coverage-xml"
    }
  ],
  "gate_policy": {
    "tests_pass": true,
    "coverage_min": 80,
    "security": {
      "bandit_high": 0
    }
  }
}