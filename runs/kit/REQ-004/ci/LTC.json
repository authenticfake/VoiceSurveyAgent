{
  "version": "1.0",
  "req_id": "REQ-004",
  "lane": "python",
  "env": {
    "DATABASE_URL": "postgresql+asyncpg://user:password@localhost:5432/voicesurvey_test",
    "OIDC_ISSUER_URL": "https://test.auth0.com/",
    "OIDC_CLIENT_ID": "test-client-id",
    "OIDC_CLIENT_SECRET": "test-client-secret",
    "JWT_SECRET_KEY": "test-secret-key-for-jwt-signing-min-32-chars",
    "LOG_LEVEL": "DEBUG"
  },
  "tools": {
    "tests": "pytest",
    "lint": "ruff",
    "types": "mypy",
    "security": "bandit",
    "build": "docker"
  },
  "commands": {
    "install": "pip install -r runs/kit/REQ-004/requirements.txt",
    "tests": "pytest runs/kit/REQ-004/test -v --cov=app.campaigns --cov-report=xml:reports/coverage.xml --junitxml=reports/junit.xml",
    "lint": "ruff check runs/kit/REQ-004/src",
    "types": "mypy runs/kit/REQ-004/src --ignore-missing-imports",
    "security": "bandit -r runs/kit/REQ-004/src -ll"
  },
  "cases": [
    {
      "name": "install_deps",
      "run": "pip install -r runs/kit/REQ-004/requirements.txt",
      "cwd": ".",
      "expect": 0,
      "timeout": 120
    },
    {
      "name": "unit_tests",
      "run": "PYTHONPATH=runs/kit/REQ-004/src:runs/kit/REQ-003/src:runs/kit/REQ-002/src:runs/kit/REQ-001/src pytest runs/kit/REQ-004/test/test_campaigns_unit.py -v --tb=short",
      "cwd": ".",
      "expect": 0,
      "timeout": 60
    },
    {
      "name": "api_tests",
      "run": "PYTHONPATH=runs/kit/REQ-004/src:runs/kit/REQ-003/src:runs/kit/REQ-002/src:runs/kit/REQ-001/src pytest runs/kit/REQ-004/test/test_campaigns_api.py -v --tb=short",
      "cwd": ".",
      "expect": 0,
      "timeout": 60
    },
    {
      "name": "all_tests_with_coverage",
      "run": "PYTHONPATH=runs/kit/REQ-004/src:runs/kit/REQ-003/src:runs/kit/REQ-002/src:runs/kit/REQ-001/src pytest runs/kit/REQ-004/test -v --cov=app.campaigns --cov-report=term-missing --cov-report=xml:reports/coverage.xml --junitxml=reports/junit.xml",
      "cwd": ".",
      "expect": 0,
      "timeout": 120
    },
    {
      "name": "lint",
      "run": "ruff check runs/kit/REQ-004/src --ignore=E501",
      "cwd": ".",
      "expect": 0,
      "timeout": 30
    },
    {
      "name": "security_scan",
      "run": "bandit -r runs/kit/REQ-004/src -ll -q",
      "cwd": ".",
      "expect": 0,
      "timeout": 30
    }
  ],
  "reports": [
    {
      "kind": "junit",
      "path": "reports/junit.xml",
      "format": "junit-xml"
    },
    {
      "kind": "coverage",
      "path": "reports/coverage.xml",
      "format": "coverage-xml"
    }
  ],
  "gate_policy": {
    "tests_pass": true,
    "coverage_min": 80,
    "security": {
      "bandit_high": 0,
      "bandit_medium": 0
    }
  },
  "constraints_applied": [
    "python@3.12",
    "fastapi",
    "sqlalchemy",
    "pytest>=8.0"
  ]
}