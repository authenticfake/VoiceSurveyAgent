{
  "info": {
    "name": "Campaign API",
    "description": "API endpoints for campaign management",
    "version": "1.0.0"
  },
  "requests": [
    {
      "name": "Create Campaign",
      "method": "POST",
      "url": "{{base_url}}/api/campaigns",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {{access_token}}"
      },
      "body": {
        "name": "Customer Satisfaction Survey",
        "description": "Q4 2024 customer satisfaction survey",
        "language": "en",
        "intro_script": "Hello, this is a brief survey from Acme Corp about your recent experience. It will take about 2 minutes. Do you consent to participate?",
        "question_1_text": "On a scale of 1 to 10, how satisfied are you with our service?",
        "question_1_type": "scale",
        "question_2_text": "What could we improve?",
        "question_2_type": "free_text",
        "question_3_text": "How many times have you used our service in the past month?",
        "question_3_type": "numeric",
        "max_attempts": 3,
        "retry_interval_minutes": 60,
        "allowed_call_start_local": "09:00:00",
        "allowed_call_end_local": "18:00:00"
      }
    },
    {
      "name": "List Campaigns",
      "method": "GET",
      "url": "{{base_url}}/api/campaigns",
      "headers": {
        "Authorization": "Bearer {{access_token}}"
      },
      "params": {
        "page": 1,
        "page_size": 20,
        "status": "draft"
      }
    },
    {
      "name": "Get Campaign",
      "method": "GET",
      "url": "{{base_url}}/api/campaigns/{{campaign_id}}",
      "headers": {
        "Authorization": "Bearer {{access_token}}"
      }
    },
    {
      "name": "Update Campaign",
      "method": "PUT",
      "url": "{{base_url}}/api/campaigns/{{campaign_id}}",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {{access_token}}"
      },
      "body": {
        "name": "Updated Campaign Name",
        "max_attempts": 5
      }
    },
    {
      "name": "Update Campaign Status",
      "method": "PATCH",
      "url": "{{base_url}}/api/campaigns/{{campaign_id}}/status",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {{access_token}}"
      },
      "body": {
        "status": "running"
      }
    },
    {
      "name": "Delete Campaign",
      "method": "DELETE",
      "url": "{{base_url}}/api/campaigns/{{campaign_id}}",
      "headers": {
        "Authorization": "Bearer {{access_token}}"
      }
    }
  ],
  "variables": {
    "base_url": "http://localhost:8000",
    "access_token": "<your_jwt_token>",
    "campaign_id": "<campaign_uuid>"
  }
}