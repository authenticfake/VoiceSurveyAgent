    "tests": "pytest",
    "lint": "py_compile",
    "types": "mypy",
    "security": "bandit",
    "build": "pip"
  },
  "commands": {
    "install": "pip install -r requirements.txt",
    "tests": "PYTHONPATH=src pytest test/ -v",
