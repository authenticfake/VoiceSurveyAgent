{
  "version": "1.0",
  "req_id": "REQ-001",
  "lane": "python",
  "env": {
    "DB_USER": "postgres",
    "DB_PASSWORD": "postgres",
    "DB_HOST": "localhost",
    "DB_PORT": "5432",
    "DB_NAME": "voicesurveyagent_test"
  },
  "cases": [
    {
      "name": "install_deps",
      "run": "pip install -r runs/kit/REQ-001/requirements.txt",
      "cwd": ".",
      "expect": 0,
      "timeout": 120
    },
    {
      "name": "lint",
      "run": "ruff check runs/kit/REQ-001/src runs/kit/REQ-001/test",
      "cwd": ".",
      "expect": 0,
      "timeout": 60
    },
    {
      "name": "types",
      "run": "mypy runs/kit/REQ-001/src --ignore-missing-imports",
      "cwd": ".",
      "expect": 0,
      "timeout": 120
    },
    {
      "name": "unit_tests",
      "run": "pytest runs/kit/REQ-001/test/test_models.py -v --tb=short",
      "cwd": ".",
      "expect": 0,
      "timeout": 60
    },
    {
      "name": "migration_tests",
      "run": "pytest runs/kit/REQ-001/test/test_migrations.py -v --tb=short",
      "cwd": ".",
      "expect": 0,
      "timeout": 180
    }
  ],
  "tools": {
    "tests": "pytest",
    "lint": "ruff",
    "types": "mypy",
    "security": "bandit",
    "build": "docker"
  },
  "reports": [
    {
      "kind": "junit",
      "path": "reports/junit.xml",
      "format": "junit-xml"
    },
    {
      "kind": "coverage",
      "path": "reports/coverage.xml",
      "format": "coverage-xml"
    }
  ],
  "gate_policy": {
    "tests_pass": true,
    "coverage_min": 80,
    "security": {
      "bandit_high": 0
    }
  }
}