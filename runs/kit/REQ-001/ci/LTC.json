{
  "version": "1.0",
  "req_id": "REQ-001",
  "lane": "python",
  "env": {
    "DISABLE_TESTCONTAINERS": "0",
    "DATABASE_URL": "postgresql://postgres:postgres@localhost:5432/voicesurveyagent",
    "DB_USER": "postgres",
    "DB_PASSWORD": "postgres",
    "DB_HOST": "localhost",
    "DB_PORT": "5432",
    "DB_NAME": "voicesurveyagent"
  },
  "cases": [
    {
      "name": "install_deps",
      "run": "pip install -r runs/kit/REQ-001/requirements.txt",
      "cwd": ".",
      "expect": 0,
      "timeout": 120
    },
    {
      "name": "migration_tests",
      "run": "pytest -p no:cacheprovider -q runs/kit/REQ-001/test/test_migration_sql.py -v",
      "cwd": ".",
      "expect": 0,
      "timeout": 300
    }
  ],
  "tools": {
    "tests": "pytest",
    "lint": "ruff",
    "types": "mypy",
    "security": "bandit",
    "build": "docker"
  },
  "commands": {
    "install": "pip install -r runs/kit/REQ-001/requirements.txt",
    "tests": "pytest -p no:cacheprovider -q runs/kit/REQ-001/test/test_migration_sql.py -v"
  },
  "reports": [
    {"kind": "junit", "path": "reports/junit.xml", "format": "junit-xml"},
    {"kind": "coverage", "path": "reports/coverage.xml", "format": "coverage-xml"}
  ],
  "gate_policy": {
    "tests_pass": true,
    "coverage_min": 0.0,
    "security": {"bandit_high": 0}
  },
  "constraints_applied": {
    "lane": "python",
    "test_profile": "app-core"
  }
}