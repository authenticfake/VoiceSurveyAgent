{
  "version": "1.0",
  "req_id": "REQ-001",
  "lane": "python",
  "env": {
    "DATABASE_URL": "postgresql://postgres:postgres@localhost:5432/voicesurvey",
    "DISABLE_TESTCONTAINERS": "0"
  },
  "cases": [
    {
      "name": "install_deps",
      "run": "pip install -r runs/kit/REQ-001/requirements.txt",
      "cwd": ".",
      "expect": 0,
      "timeout": 120
    },
    {
      "name": "tests",
      "run": "pytest -v runs/kit/REQ-001/test/test_migration_sql.py --tb=short",
      "cwd": ".",
      "expect": 0,
      "timeout": 300
    }
  ],
  "tools": {
    "tests": "pytest",
    "lint": "ruff",
    "types": "mypy",
    "security": "bandit",
    "build": "n/a"
  },
  "commands": {
    "install": "pip install -r runs/kit/REQ-001/requirements.txt",
    "tests": "pytest -v runs/kit/REQ-001/test/",
    "upgrade": "bash runs/kit/REQ-001/scripts/db_upgrade.sh",
    "downgrade": "bash runs/kit/REQ-001/scripts/db_downgrade.sh",
    "seed": "bash runs/kit/REQ-001/scripts/db_seed.sh"
  },
  "reports": [
    {
      "kind": "junit",
      "path": "reports/junit.xml",
      "format": "junit-xml"
    }
  ],
  "gate_policy": {
    "tests_pass": true,
    "coverage_min": 0,
    "security": {
      "bandit_high": 0
    }
  },
  "constraints_applied": {
    "database": "postgres",
    "migration_strategy": "versioned_sql",
    "orm": "SQLAlchemy"
  }
}