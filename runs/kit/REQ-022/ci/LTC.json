{
  "version": "1.0",
  "req_id": "REQ-022",
  "lane": "python",
  "env": {
    "PYTHONPATH": "runs/kit/REQ-022/src:runs/kit/REQ-019/src:runs/kit/REQ-001/src",
    "DATABASE_URL": "postgresql://user:password@localhost:5432/voicesurvey",
    "S3_BUCKET_NAME": "voicesurvey-recordings",
    "AWS_REGION": "eu-central-1"
  },
  "cases": [
    {
      "name": "install_deps",
      "run": "pip install -r runs/kit/REQ-022/requirements.txt",
      "cwd": ".",
      "expect": 0,
      "timeout": 120
    },
    {
      "name": "unit_tests",
      "run": "pytest runs/kit/REQ-022/test/ -v -k 'not migration' --tb=short",
      "cwd": ".",
      "expect": 0,
      "timeout": 300
    },
    {
      "name": "lint",
      "run": "ruff check runs/kit/REQ-022/src/ --ignore=E501,F401",
      "cwd": ".",
      "expect": 0,
      "timeout": 60
    },
    {
      "name": "types",
      "run": "mypy runs/kit/REQ-022/src/ --ignore-missing-imports --no-error-summary || true",
      "cwd": ".",
      "expect": 0,
      "timeout": 120
    }
  ],
  "tools": {
    "tests": "pytest",
    "lint": "ruff",
    "types": "mypy",
    "security": "bandit",
    "build": "pip"
  },
  "commands": {
    "install": "pip install -r runs/kit/REQ-022/requirements.txt",
    "test": "pytest runs/kit/REQ-022/test/ -v",
    "lint": "ruff check runs/kit/REQ-022/src/",
    "types": "mypy runs/kit/REQ-022/src/"
  },
  "reports": [
    {
      "kind": "junit",
      "path": "reports/junit.xml",
      "format": "junit-xml"
    },
    {
      "kind": "coverage",
      "path": "reports/coverage.xml",
      "format": "coverage-xml"
    }
  ],
  "gate_policy": {
    "tests_pass": true,
    "coverage_min": 0.0,
    "security": {
      "bandit_high": 0
    }
  },
  "constraints_applied": {
    "lane": "python",
    "runtime": "python@3.12",
    "platform": "aws-eks"
  }
}