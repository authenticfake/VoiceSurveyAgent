{
  "version": "1.0",
  "req_id": "REQ-003",
  "lane": "python",
  "env": {
    "DATABASE_URL": "postgresql+asyncpg://test:test@localhost:5432/test",
    "JWT_SECRET_KEY": "test-secret-key-for-testing-purposes-only",
    "JWT_ALGORITHM": "HS256",
    "JWT_ACCESS_TOKEN_EXPIRE_MINUTES": "30",
    "JWT_REFRESH_TOKEN_EXPIRE_DAYS": "7",
    "OIDC_CLIENT_ID": "test-client",
    "OIDC_CLIENT_SECRET": "test-secret",
    "OIDC_ISSUER_URL": "https://test-idp.example.com",
    "OIDC_REDIRECT_URI": "http://localhost:8000/api/auth/callback",
    "PYTHONPATH": "runs/kit/REQ-003/src:runs/kit/REQ-002/src:runs/kit/REQ-001/src"
  },
  "cases": [
    {
      "name": "install_deps",
      "run": "pip install -r runs/kit/REQ-003/requirements.txt",
      "cwd": ".",
      "expect": 0,
      "timeout": 120
    },
    {
      "name": "lint",
      "run": "ruff check runs/kit/REQ-003/src runs/kit/REQ-003/test --ignore E501",
      "cwd": ".",
      "expect": 0,
      "timeout": 60
    },
    {
      "name": "types",
      "run": "mypy runs/kit/REQ-003/src --ignore-missing-imports --no-error-summary",
      "cwd": ".",
      "expect": 0,
      "timeout": 120
    },
    {
      "name": "tests",
      "run": "pytest runs/kit/REQ-003/test -v --tb=short -p no:cacheprovider",
      "cwd": ".",
      "expect": 0,
      "timeout": 180
    },
    {
      "name": "coverage",
      "run": "pytest runs/kit/REQ-003/test --cov=runs/kit/REQ-003/src --cov-report=term-missing --cov-report=xml:runs/kit/REQ-003/reports/coverage.xml --junitxml=runs/kit/REQ-003/reports/junit.xml -p no:cacheprovider",
      "cwd": ".",
      "expect": 0,
      "timeout": 180
    }
  ],
  "reports": [
    {
      "kind": "junit",
      "path": "runs/kit/REQ-003/reports/junit.xml",
      "format": "junit-xml"
    },
    {
      "kind": "coverage",
      "path": "runs/kit/REQ-003/reports/coverage.xml",
      "format": "coverage-xml"
    }
  ],
  "gate_policy": {
    "tests_pass": true,
    "coverage_min": 80,
    "security": {
      "bandit_high": 0
    }
  },
  "tools": {
    "tests": "pytest>=8.0",
    "lint": "ruff>=0.4",
    "types": "mypy>=1.10",
    "security": "bandit>=1.7",
    "build": "docker>=24.0"
  }
}