{
  "version": "1.0",
  "req_id": "REQ-003",
  "lane": "python",
  "env": {
    "PYTHONPATH": "runs/kit/REQ-003/src:runs/kit/REQ-002/src:runs/kit/REQ-001/src",
    "DATABASE_URL": "postgresql://user:password@localhost:5432/voicesurvey_test"
  },
  "cases": [
    {
      "name": "install_deps",
      "run": "pip install pytest pytest-asyncio pytest-cov httpx fastapi pydantic",
      "cwd": ".",
      "expect": 0
    },
    {
      "name": "tests",
      "run": "pytest runs/kit/REQ-003/test/test_rbac.py -v --tb=short",
      "cwd": ".",
      "expect": 0,
      "timeout": 120
    },
    {
      "name": "tests_with_coverage",
      "run": "pytest runs/kit/REQ-003/test/test_rbac.py --cov=runs/kit/REQ-003/src --cov-report=xml:runs/kit/REQ-003/reports/coverage.xml --junitxml=runs/kit/REQ-003/reports/junit.xml",
      "cwd": ".",
      "expect": 0,
      "timeout": 180
    }
  ],
  "reports": [
    {
      "kind": "junit",
      "path": "runs/kit/REQ-003/reports/junit.xml",
      "format": "junit-xml"
    },
    {
      "kind": "coverage",
      "path": "runs/kit/REQ-003/reports/coverage.xml",
      "format": "coverage-xml"
    }
  ],
  "gate_policy": {
    "tests_pass": true,
    "coverage_min": 80,
    "security": {
      "bandit_high": 0
    }
  },
  "tools": {
    "tests": "pytest",
    "lint": "ruff",
    "types": "mypy",
    "security": "bandit",
    "build": "docker"
  },
  "commands": {
    "tests": "pytest runs/kit/REQ-003/test/ -v",
    "lint": "ruff check runs/kit/REQ-003/src",
    "types": "mypy runs/kit/REQ-003/src --strict",
    "security": "bandit -r runs/kit/REQ-003/src -ll"
  }
}