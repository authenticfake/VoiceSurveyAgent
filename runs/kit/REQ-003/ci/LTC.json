{
  "version": "1.0",
  "req_id": "REQ-003",
  "lane": "python",
  "env": {
    "PYTHONPATH": "runs/kit/REQ-003/src:runs/kit/REQ-002/src:runs/kit/REQ-001/src",
    "DATABASE_URL": "postgresql://user:password@localhost:5432/voicesurvey_test",
    "OIDC_ISSUER": "https://test.idp.local",
    "OIDC_CLIENT_ID": "test-client",
    "OIDC_CLIENT_SECRET": "test-secret",
    "JWT_SECRET_KEY": "test-jwt-secret-key-for-testing-only",
    "LOG_LEVEL": "DEBUG"
  },
  "cases": [
    {
      "name": "install_deps",
      "run": "pip install -r runs/kit/REQ-003/requirements.txt",
      "cwd": ".",
      "expect": 0
    },
    {
      "name": "tests",
      "run": "pytest runs/kit/REQ-003/test -v --tb=short -p no:cacheprovider",
      "cwd": ".",
      "expect": 0,
      "timeout": 120
    },
    {
      "name": "lint",
      "run": "ruff check runs/kit/REQ-003/src runs/kit/REQ-003/test --ignore=E501",
      "cwd": ".",
      "expect": 0
    },
    {
      "name": "types",
      "run": "mypy runs/kit/REQ-003/src --ignore-missing-imports --no-error-summary",
      "cwd": ".",
      "expect": 0
    }
  ],
  "reports": [
    {
      "kind": "junit",
      "path": "reports/junit.xml",
      "format": "junit-xml"
    },
    {
      "kind": "coverage",
      "path": "reports/coverage.xml",
      "format": "coverage-xml"
    }
  ],
  "gate_policy": {
    "tests_pass": true,
    "coverage_min": 80,
    "security": {
      "bandit_high": 0
    }
  }
}